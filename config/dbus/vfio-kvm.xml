<busconfig>
	<policy user="root">
		<allow own_prefix="vfio.kvm" />
		<allow send_destination="vfio.kvm" />
	</policy>
	<policy group="input">
		<allow send_destination="vfio.kvm" />
		<allow receive_sender="vfio.kvm" />
	</policy>
	<policy context="default">
		<deny own_prefix="vfio.kvm"/>
		<deny send_destination="vfio.kvm" />
	</policy>
</busconfig>
